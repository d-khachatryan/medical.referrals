    <h4>@Model.FirstName @Model.PatronymicName  @Model.LastName</h4>
    <table class="table table-striped" style="width:580px;">
        <tr>
            <td>@Html.LabelFor(model => model.ReferralNumber)</td>
            <td>@Html.DisplayFor(model => model.ReferralNumber)</td>
        </tr>
