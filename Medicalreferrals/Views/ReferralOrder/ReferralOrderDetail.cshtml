            <td>@Html.LabelFor(model => model.ServiceDate)</td>
            <td>@Html.DisplayFor(model => model.ServiceDate)</td>
        </tr>*@
        
    </table>
</div>
<button id="rtSave" class="k-button"><i class="glyphicon glyphicon-download-alt"></i> Արտահանել</button>


<script>
    $(document).ready(function () {
        $("#rtSave")
            .click(function () {
                var draw = kendo.drawing;
                draw.drawDOM($("#content"), {
                    avoidLinks: true,
                    paperSize: "A4"
                })
                .then(function (root) {
                    return draw.exportPDF(root);
                })
                .done(function (data) {
                    kendo.saveAs({
                        dataURI: data,
                        fileName: '@Model.ReferralId'
                    });
                    return false;
                });
            });
    }
)
</script>

