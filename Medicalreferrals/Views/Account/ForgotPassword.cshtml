@model Medicalreferrals.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Մոռացել ե՞ք գաղտնաբառը";
}
<div class="homePage">
    <div class="background-fon">
        <div class="container">
            <div class="row">
                <div class="homePage-container">
                    @*<h1>@ViewBag.Title</h1>*@
                    <section id="loginForm">
                        @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                            @Html.AntiForgeryToken()
                            <p class="homePage-container-text">Մուտքագրեք Ձեր էլեկտրոնային փոստի հասցեն, որով գրանցված եք համակարգում</p>
                            <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", style = "color:#fff;" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "max-width:300px;" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { style = "color:yellow;" })
                                            </div>
                                        </div>
                                        
                                        
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Վերականգնել գաղտնաբառը" class="btn btn-default" />
                                            </div>
                                        </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    $(".background-fon").height($(window).height()-80);
</script>

