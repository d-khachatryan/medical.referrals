@model Medicalreferrals.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Վերականգնել գաղտնաբառը";
}
<div class="homePage">
    <div class="background-fon">
        <div class="container">
            <div class="row">
                <div class="homePage-container">
                    @*<h1>@ViewBag.Title</h1>*@
                    <section id="loginForm">
                        @using (Html.BeginForm("ResetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                            @Html.AntiForgeryToken()
                            <p class="homePage-container-text">Մուտքագրեք Ձեր էլեկտրոնային փոստի հասցեն և նոր գաղտնաբառը</p>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Code)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label", style = "color:#fff;" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "max-width:300px;" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { style = "color:yellow;" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label", style = "color:#fff;" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "max-width:300px;" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { style = "color:yellow;" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label", style = "color:#fff;" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "max-width:300px;" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { style = "color:yellow;" })
                                </div>
                            </div>


                                        <div class="form-group">
                                            <div class="col-md-offset-3 col-md-9">
                                                <input type="submit" value="Վերականգնել" class="btn btn-default" />
                                            </div>
                                        </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    $(".background-fon").height($(window).height()-80);
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




